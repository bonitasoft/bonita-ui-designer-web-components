{
  "name": "@bonitasoft/uid-text",
  "version": "0.1.7",
  "description": "A text component",
  "homepage": "https://github.com/bonitasoft/web-components/components/packages/widgets/uid-text#readme",
  "license": "GPLv2",
  "module": "lib/uid-text.es5.min.js",
  "files": [
    "assets",
    "lib",
    "src/uid-text.ts",
    "test"
  ],
  "dependencies": {
    "bootstrap": "^4.5.3",
    "lit": "*",
    "lit-translate": "^1.2.1"
  },
  "devDependencies": {
    "ts-loader": "^8.0.11",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bonitasoft/web-components.git"
  },
  "scripts": {
    "gen-widget": "cwb gen-widget --propertiesFile uidText.json --webComponentBundle lib/uid-text.es5.min.js --outputDir uid_widget",
    "gen-widget-assets": "cwb gen-widget-assets --propertiesFile uidText.json --webComponentBundle lib/uid-text.es5.min.js --outputDir assets",
    "start": "npm install && rollup -c -w --environment devMode:true",
    "lint": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "bundle": "tsc && rollup -c",
    "clean": "rm -rf build lib node_modules",
    "pack": "npm pack",
    "publish": "npm run gen-widget-assets && npm publish"
  }
}
